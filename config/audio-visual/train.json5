{
  "seed": 0,

  "train_dataset":
  {
    "train_dir": "./local/lrs2/tr",
    "batch_size": 6,
    "sample_rate": 16000,
    "segment": -1,
  },

  "validation_dataset":
  {
    "validation_dir": "./local/lrs2/cv",
    "batch_size": 16,
    "sample_rate": 16000,
    "segment": -1,
    "cv_max_len": 10,
  },

  "train_loader":
  {
   "batch_size": 1,
   "shuffle": true,
   "num_workers": 4,
  },

  "validation_loader":
  {
    "batch_size": 1,
    "shuffle": true,
    "num_workers": 4,
  },

  "model":
  {
    "type": "av_sandglasset",
    "mode": "audio-visual",

    "sandglasset":
    {
      "in_channels": 256,
      "out_channels": 128,
      "kernel_size": 36,
      "length": 256,
      "hidden_channels": 128,
      "num_layers": 1,
      "bidirectional": true,
      "num_heads": 8,
      "depth": 3,
      "speakers": 1,
      "video_model": "/home/photon/MyGraduationProject/frcnn_128_512.backbone.pth.tar"
    }
  },

  "train":
  {
    "use_cuda": true,
    "epochs": 200,
    "half_lr": true,
    "early_stop": true,
    "max_norm": 5,
  },

  "optimizer":
  {
    "type": "adamp",

    "sgd":
    {
      "lr": 0.125,
      "momentum": 0.0,
      "l2": 0.0,
    },

    "adam":
    {
      "lr": 0.0125,
      "beta1": 0.9,
      "beta2": 0.999
    },

    "sgdp":
    {
      "lr":0.1,
      "weight_decay":1e-5,
      "momentum":0.9,
      "nesterov":true
    },

    "adamp":
    {
      "lr":0.001,
      "beta1":0.9,
      "beta2":0.999,
      "weight_decay":1e-2,
    }
  },

  "save_load":
  {
    "save_folder": "./exp/audio_visual_lrs2_avattention/",
    "checkpoint": true,
    "continue_from": "final.path.tar", 
    "model_path": "final.path.tar",
  },

  "logging":
  {
    "print_freq": 100,
  }
}
